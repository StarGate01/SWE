{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release Binaries",
            "type": "shell",
            "command": "scons",
            "args": [
                "buildVariablesFile=build/options/SWE_gnu.py",
                "compileMode=release"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build Debug Binaries",
            "type": "shell",
            "command": "scons",
            "args": [
                "buildVariablesFile=build/options/SWE_gnu.py",
                "compileMode=debug"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Binaries",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build/build_SWE_gnu_debug_none_fwave",
                "build/SWE_gnu_debug_none_fwave"
            ],
            "problemMatcher": []
        },
        {
            "label": "Regenerate Data",
            "type": "shell",
            "command": "bash",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
               "-c",
               "\"rm -rf data && mkdir data && cd data && ../SWE_gnu_debug_none_fwave -x 100 -y 100 -a ../input/artificial/artificialtsunami_bathymetry_1000.nc -c ../input/artificial/artificialtsunami_displ_1000.nc -d 80 -p 40 -l 1 -r 1 -t 1 -b 1 -o swe\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Documentation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "\"doxygen ../documentation/doxygen.cfg && (cd ../documentation/build/latex;make)\""
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers/src"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Clean Documentation",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r",
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers/documentation"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Solver Tests",
            "type": "shell",
            "command": "scons",
            "args": [
                "check"
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}/submodules/solvers"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Framework Tests",
            "type": "shell",
            "command": "scons",
            "args": [
                "check",
                "buildVariablesFile=build/options/SWE_gnu.py",
                "compileMode=debug"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}/submodules/solvers"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build Presentation",
            "type": "shell",
            "command": "xelatex",
            "args": [
                "assignment2.tex"
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers/documentation/presentation2"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Presentation",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "*.aux", "*.log", "*.nav", "*.out", "*.pdf", "*.snm", "*.toc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers/documentation/presentation2"
            },
            "problemMatcher": []
        }
    ]
}